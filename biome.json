{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"include": ["src"],
		"ignore": ["dist", "node_modules", "tmp"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineWidth": 120,
		"indentStyle": "tab",
		"indentWidth": 1
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"recommended": true
		}
	}
}
